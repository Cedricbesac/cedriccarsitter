    <!-- Toast de confirmation -->
    <div id="toast" class="toast">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"><polyline points="20 6 9 17 4 12"></polyline></svg>
        <span>SVG copié dans le presse-papier !</span>
    </div>

    <script>
        // --- EVENT DELEGATION FOR ALL BUTTONS ---
        document.addEventListener('click', function(e) {
            // Check if clicked element is a copy button
            if (e.target && e.target.classList.contains('copy-btn')) {
                copySVG(e.target);
            }
        });
        
        // Attach Generate Event
        document.getElementById('generateBtn').addEventListener('click', generateIcon);

        // --- CORE FUNCTIONS ---
        function copySVG(btnElement) {
            const card = btnElement.closest('.icon-card');
            const svgContainer = card.querySelector('.svg-container');
            const svgCode = svgContainer.innerHTML.trim();

            const tempInput = document.createElement("textarea");
            tempInput.value = svgCode;
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand("copy");
            document.body.removeChild(tempInput);

            const toast = document.getElementById('toast');
            toast.classList.add('show');
            setTimeout(() => { toast.classList.remove('show'); }, 2000);
        }

        // --- GEMINI API INTEGRATION ---
        async function generateIcon() {
            const userInput = document.getElementById('serviceInput').value;
            if (!userInput) return;

            const loadingState = document.getElementById('loadingState');
            const resultArea = document.getElementById('aiResultArea');
            const generatedGrid = document.getElementById('generatedGrid');
            const generateBtn = document.getElementById('generateBtn');

            // UI State Loading
            loadingState.classList.remove('hidden');
            resultArea.classList.add('hidden');
            generateBtn.disabled = true;
            generateBtn.innerHTML = `<span>Génération...</span>`;

            try {
                const apiKey = ""; // API Key provided by environment
                if (!apiKey) {
                    throw new Error("API Key is missing. Environment variable not set.");
                }
                const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
                
                const prompt = `
                    You are an expert UI designer and copywriter for a premium car service called 'CarSitter'.
                    The user wants to add a new service: "${userInput}".
                    
                    1. Create a short, punchy title (max 3 words) in French.
                    2. Create a short marketing description (max 10 words) in French that sounds reassuring and professional.
                    3. Generate SVG CODE for an icon representing this service.
                    
                    CRITICAL SVG RULES:
                    - ViewBox: 0 0 24 24
                    - Stroke color: currentColor
                    - Stroke width: 1.5
                    - Fill: none
                    - Stroke-linecap: round
                    - Stroke-linejoin: round
                    - Style: Minimalist, outline, clean.
                    - Do NOT include markdown blocks. Just raw XML if possible, or strict JSON.
                    
                    Return ONLY a JSON object with this structure:
                    {
                        "title": "String",
                        "description": "String",
                        "svg": "String (full <svg> code)"
                    }
                `;

                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: [{ parts: [{ text: prompt }] }],
                        generationConfig: { responseMimeType: "application/json" }
                    })
                });

                const data = await response.json();
                
                if (!data.candidates || !data.candidates[0] || !data.candidates[0].content) {
                    throw new Error("Invalid response from API");
                }

                const result = JSON.parse(data.candidates[0].content.parts[0].text);

                // Safe SVG Rendering
                let svgContent = result.svg;
                // Basic cleanup if needed
                if (!svgContent.includes('<svg')) {
                    // Fallback if AI returns just paths
                    svgContent = `<svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">${svgContent}</svg>`;
                } else {
                    // Resize for display
                    svgContent = svgContent.replace(/width="\d+"/, 'width="48"').replace(/height="\d+"/, 'height="48"');
                }

                // Render Result
                generatedGrid.innerHTML = `
                    <div class="icon-card bg-white p-8 rounded-2xl border border-blue-300 shadow-md group relative overflow-hidden">
                        <div class="absolute top-0 left-0 bg-blue-600 text-white text-[10px] px-2 py-1 font-bold uppercase">Nouveau</div>
                        <div class="flex justify-center mb-6 svg-container text-blue-600">
                            ${svgContent}
                        </div>
                        <h3 class="text-center font-bold text-slate-900">${result.title}</h3>
                        <p class="text-center text-xs text-slate-500 mt-2 leading-relaxed">${result.description}</p>
                        <div class="copy-overlay"><button class="copy-btn bg-blue-600 text-white px-5 py-2.5 rounded-lg font-semibold hover:bg-blue-700 transition shadow-lg transform active:scale-95">Copier</button></div>
                    </div>
                `;

                resultArea.classList.remove('hidden');

            } catch (error) {
                console.error("Erreur:", error);
                alert("Erreur de génération : " + error.message);
            } finally {
                loadingState.classList.add('hidden');
                generateBtn.disabled = false;
                generateBtn.innerHTML = '<span>Générer</span> <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>';
            }
        }
    </script>

</body>
</html>
